{
  "manifest_version": 2,
  "name": "Musescore Downloader",
  "description": "This extension allows you to download sheets and audio.",
  "version": "0.1.3",
  "permissions": [
    "https://musescore.com/*",
    "https://s3.ultimate-guitar.com/musescore.scoredata/g/*"
  ],
  "icons": {
    "16": "./src/images/pic16.png",
    "32": "./src/images/pic32.png",
    "48": "./src/images/pic48.png",
    "128": "./src/images/pic128.png"
  },
  "browser_action": {
    "default_popup": "./src/popup.html"
  },
  "background": {
    "scripts": [
      "./src/scripts/libs/browser-polyfill.js",
      "./src/scripts/libs/blob-stream.js",
      "./src/scripts/libs/pdfkit.js",
      "./src/scripts/libs/svg-pdf.js",
      "./src/scripts/background.js"
    ],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": ["https://musescore.com/*"],
      "js": [
        "./src/scripts/libs/browser-polyfill.js",
        "./src/scripts/content.js"
      ]
    }
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self';"
}
